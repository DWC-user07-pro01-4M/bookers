<body>

    <p id="notice"><%= flash[:notice] %></p>

<h1>Editing Book</h1>

<%= form_with model: @books, url: book_path(@books.id), method: :patch do |f| %>

    <div class="field">
        <label for="book_title">Title</label><br>
        <%= f.text_field :title %>
    </div>

    <div class="field">
        <label for="book-body">Body</label><br>
        <%= f.text_area :body %>
    </div>

    <div class="actions">
        <%= f.submit 'Update Book' %>
    </div>

        <div>
        <%= link_to "Show", book_path(@books.id) %>
        |
        <%= link_to "Back", books_path %>
        </div>
<% end %>
</body>