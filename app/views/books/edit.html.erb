<h1>Editing Book</h1>

<%= form_with model: @books, url: book_path(@books.id), method: :patch do |f| %>

<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path(@books.id) %>
<p>|</p>
<%= link_to "Back", books_path %>